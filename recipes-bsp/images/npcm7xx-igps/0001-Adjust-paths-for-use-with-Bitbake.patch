 	</BinField>
 	
 	<BinField>
@@ -50,9 +50,9 @@
 		<name>Code</name>             <!-- name of field -->
 		<config>
 			<offset>0x200</offset>       
-			<size format='FileSize'>inputs/Poleg_bootblock.bin</size>                 <!-- size in the header calculated by tool-->
