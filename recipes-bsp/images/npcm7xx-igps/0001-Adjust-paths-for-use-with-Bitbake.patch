 		</config>
-		<content format='FileContent'>inputs/Poleg_bootblock.bin</content>  <!-- content the user should fill -->
+		<content format='FileContent'>Poleg_bootblock.bin</content>  <!-- content the user should fill -->
 	</BinField>	
 	
 	<!-- BMC optional fields -->
